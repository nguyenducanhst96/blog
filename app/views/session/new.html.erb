<div class="card card-container">
<!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
	<img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
	<p id="profile-name" class="profile-name-card"></p>
	<%= form_for :session, url: login_path, html: {class: "form-signin"} do |f| %>
		<span id="reauth-email" class="reauth-email"></span>
		<%= f.email_field :email, class: "form-control", placeholder: "Email address", :required => true, :autofocus => true %>
		<%= f.password_field :password, class: "form-control", placeholder: "Password", :required => true %>
		
			<div id="remember" class="checkbox">
					<label>
							<input type="checkbox" value="remember-me"> Remember me
					</label>
			</div>
			<%= button_tag "Sign in", class: "btn btn-lg btn-primary btn-block btn-signin" %>
	<% end %>
	<a href="#" class="forgot-password">
			Forgot the password?
	</a>
</div><!-- /car
